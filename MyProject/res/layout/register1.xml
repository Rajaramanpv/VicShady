<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#0000ff"
    >

 <!--    <Spinner
        android:id="@+id/security1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="40dip"
        android:spinnerMode="dialog"
        android:prompt="@string/security_question"
        /> -->
     <EditText 
         android:id="@+id/security1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:hint="What is your Hometown?"
         android:layout_marginTop="40dp"
         />   
        
    <EditText 
        android:id="@+id/answer1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:hint="Answer" 
         />
    
    <EditText 
        android:id="@+id/security2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:hint="What is your nick name?"
        />
    <EditText 
        android:id="@+id/answer2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:hint="VicShady"
        />
    <EditText 
        android:id="@+id/email2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:hint="xyz@abc.com"
        />
    <TableLayout 
        android:stretchColumns="2"
        android:shrinkColumns="2"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TableRow>
            <Button 
                android:id="@+id/reg1back"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:text="Back"
                android:textSize="20dip"
                android:paddingLeft="60dip"
                android:layout_marginLeft="5dip"
                />
            <Button 
                android:id="@+id/reg1next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Next"
                android:textSize="20dip"
                android:paddingRight="60dip"
                android:layout_marginRight="5dip"
                />
            
        </TableRow>
    </TableLayout>

</LinearLayout>